<section>
  <div class='row'>
    <div class='col-sm-10 col-sm-offset-1'>
      <header>
        <h3><%= "#{@user.full_name}" %>'s Profile</h3>
        <hr class='col-sm-12'>
      </header>

      <div class='col-sm-10'>
        <strong class='col-sm-4'>First name</strong>
        <div class='col-sm-6'>
          <%= @user.first_name %>
        </div>
      </div>
      <div class='col-sm-10'>
        <strong class='col-sm-4'>Last name</strong>
        <div class='col-sm-6'>
          <%= @user.last_name %>
        </div>
      </div>
      <div class='col-sm-10'>
        <strong class='col-sm-4'>Email</strong>
        <div class='col-sm-6'>
          <%= @user.email %>
        </div>
      </div>

    </div>
  </div>
</section>

<% content_for(:sidebar) do %>
  Actions
  <hr class='sidebar-hr'>
  <ul class='sidebar-link'>
    <li><%= link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-default btnwidth' %></li>
    <li><%= link_to 'Delete', admin_user_path(@user), method: :delete, class: 'btn btn-default btnwidth',
        data: { confirm: "Are you sure you want to delete #{@user.full_name}?"} %></li>
  </ul>
  <hr class='sidebar-hr'>
<% end %>
