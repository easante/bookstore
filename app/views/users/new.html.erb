<div class='container'>
  <div class='row'>
    <div class='col-md-8'>
      <h3 class="titles">Customer details</h3>
    </div>
    <div class='col-md-6'>

      <%= bootstrap_form_for(@user, :html => {:class => "form-horizontal"}) do |f| %>
        <div class='form-group'>
          <label class='control-label col-sm-3'>First name</label>
          <div class='col-sm-9'>
            <%= f.text_field :first_name, class: 'form-control', hide_label: true %>
          </div>
        </div>
        <div class='form-group'>
          <label class='control-label col-sm-3'>Last name</label>
          <div class='col-sm-9'>
            <%= f.text_field :last_name, class: 'form-control', hide_label: true %>
          </div>
        </div>
        <div class='form-group'>
          <label class='control-label col-sm-3'>Email</label>
          <div class='col-sm-9'>
              <%= f.text_field :email, class: 'form-control', hide_label: true %>
          </div>
        </div>
        <div class='form-group'>
          <label class='control-label col-sm-3'>Password</label>
          <div class='col-sm-9'>
              <%= f.password_field :password, class: 'form-control', hide_label: true %>
          </div>
        </div>
        <div class='form-group'>
          <label class='control-label col-sm-3'>Confirmation</label>
          <div class='col-sm-9'>
              <%= f.password_field :password_confirmation, class: 'form-control', hide_label: true %>
          </div>
        </div>
        <hr>
        <div class='form-group'>
          <label class='control-label col-sm-3'>Address</label>
          <div class='col-sm-9'>
              <%= f.text_field :address, class: 'form-control', hide_label: true %>
          </div>
        </div>
        <div class='form-group'>
          <label class='control-label col-sm-3'>City</label>
          <div class='col-sm-9'>
              <%= f.text_field :city, class: 'form-control', hide_label: true %>
          </div>
        </div>
        <div class='form-group'>
          <label class='control-label col-sm-3'>Postal Code</label>
          <div class='col-sm-9'>
              <%= f.text_field :postal_code, class: 'form-control', hide_label: true %>
          </div>
        </div>
        <div class='form-group actions control-group'>
          <div class='col-sm-offset-3'>
            <%= f.submit class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
