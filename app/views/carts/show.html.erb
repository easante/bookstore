<section >
  <div class='row'>
    <div class='col-sm-8 col-sm-offset-1'>
      <header>
        <h3 class='titles' id='book-show'>Your Shopping Cart</h3>
      </header>
      <div id='cart-items'>
        <% @cart.cart_items.each do |item| %>
          <%= item.quantity %>&times;<%= item.book.title %>
          <%= "#{number_to_currency(item.line_total)}" %><br>
        <% end %>
      </div>
      <hr>
      <div id="cart-total">
        <strong>Total: </strong><%= number_to_currency(@cart.total_sale) %>
      </div>
      <div id='clear-cart-btn'>
        <%= button_to "Clear cart", cart_path(@cart), method: :delete,
          data: { confirm: "Are you sure?"}, class: "btn btn-primary" %>
      </div>
      <div id='checkout-btn'>
        <%= button_to "Checkout", new_order_path, method: :get, class: "btn btn-default" %>
      </div>
    </div>
  </div>
</section>
