<section class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= bootstrap_form_for @user, url: password_reset_path(params[:id]) do |f| %>
        <header>
          <h3>Reset Your Password</h3>
        </header>
        <fieldset class="form-group">
          <%= f.password_field :password, label: "New Password" %>
        </fieldset>
        <fieldset class="form-group action">
          <%= f.submit "Reset Password", class: "btn btn-default" %>
        </fieldset>
      <% end %>
    </div>
  </div>
</section>
