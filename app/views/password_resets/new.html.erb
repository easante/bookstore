<section class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= bootstrap_form_tag url: password_resets_path,
                            html: { class:'form-horizontal' } do |f| %>
        <header>
          <h3>Forgotten Your Password?</h3>
          <p>Enter your email address for a link to be sent to you to reset your password.</p>
        </header>
        <fieldset class="form-group">
          <%= f.email_field :email, label: "Email Address" %>
        </fieldset>
        <fieldset class="form-group action">
          <%= f.submit "Reset Password", class="btn btn-default" %>
        </fieldset>
      <% end %>
    </div>
  </div>
</section>
