<section class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-1">
      <%= bootstrap_form_tag url: password_resets_path,
                            html: { class:'form-horizontal' } do |f| %>
        <div class="col-sm-10">

          <h3>Forgotten Your Password?</h3>
          <p>Enter your email address and click on the 'Reset Password' button
            and a link will be sent to you to reset your password.</p>

        <div class="col-sm-8 form-group">
          <%= f.email_field :email, label: "Email Address" %>
        </div>
        <div class="col-sm-8 form-group action">
          <%= f.submit "Reset Password", class:"btn btn-default" %>
        </div>

        </div>
      <% end %>
    </div>
  </div>
</section>
